<%= content_tag :div, class: "media", id: "task-#{item.id}" do %>
  <div class="media-body">
    <div class="btn-group pull-left" role="group">
      <% if item.completed? || item.archived? %>
        <%= link_to "", user_item_activate_path(current_user, item), class: 'glyphicon glyphicon-repeat', title: "Re-activate Task", method: :put, remote: true %> 
      <% else %>
        <%= link_to "", user_item_complete_path(current_user, item), class: 'glyphicon glyphicon-ok', title: "Complete Task", method: :put, remote: true %> |
        <%= link_to "", user_item_archive_path(current_user, item), class: 'glyphicon glyphicon-remove', title: "Remove Task", method: :put, remote: true %>
      <% end %>
    </div>
    <p><%= item.name %></p>
  </div>
<% end %>